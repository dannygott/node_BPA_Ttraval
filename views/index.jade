extends layout

block content
  div
    center

        div(class="row")
            div(class="col-md-offset-2 col-md-5")
                h1 Your Vacation is Only a Fiew Memes Away
                p(style = "padding-top:10px;") To get started head over to the destination tab
                img.Vacation(width = "90%" style = "padding-top:10px;" src = "vacation13.jpg")





                  
            div.fullscreen
                div(style="display:inline-block; position: relative;  top: 50%; transform: translateY(-50%);").panel.panel-primary
                    if user
                        div(class="panel-heading")
                            h3(class="panel-title") Welcome #{user.id}

                    else
                        div(class="panel-heading")
                            h3(class="panel-title") Login/Register
                        div(class="panel-body")
                            form(class="form-horizontal",action="/auth/login",method="post")
                                div(class="form-group")
                                    label(class="col-md-4 control-label") Username
                                    div(class="col-md-8")
                                        input(type='text',name='username')
                                div(class="form-group")
                                    label(class="col-md-4 control-label") Password
                                    div(class="col-sm-8")
                                        input(type='password',name='password')
                                div(class="form-group")
                                    div(class="col-md-offset-4 col-md-8")
                                        input(class="btn btn-default",type='submit',value='Log in')

                            form(class="form-horizontal",action="/auth/register",method="post")
                                div(class="form-group")
                                    label(class="col-md-4 control-label") Username
                                    div(class="col-md-8")
                                        input(type='text',name='username')
                                div(class="form-group")
                                    label(class="col-md-4 control-label") Password
                                    div(class="col-sm-8")
                                        input(type='password',name='password')
                                div(class="form-group")
                                    label(class="col-md-4 control-label") Airport Code
                                    div(class="col-sm-8")
                                        input(type='text',name='airport')
                                div(class="form-group")
                                    div(class="col-md-offset-4 col-md-8")
                                        input(class="btn btn-default",type='submit',value='Register')
