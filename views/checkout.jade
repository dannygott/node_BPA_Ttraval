extends layout
block content
    div
        center
          div
            h1(style="font-size: 70px") Checkout

            div.bluBox.shadow
              h3.blutytles.shadow Flight Information
              div(style = "padding-top:2vw;")
                center
                  div(style="border-radius: 15px 0px 0px 15px;").airportCard.shadow
                    div(style = "padding:2vw 3vw 2vw 3vw;")
                      h3 From
                      h2= user.airport
                      img(src="/airport.jpg",height="300")

                  image(src="/img/flightcircle.png").centered.shadow.flightCircle

                  div(style="border-radius: 0px 15px 15px 0px;").airportCard.shadow
                    div(style = "padding:2vw 3vw 2vw 3vw; border-radius: 0px 15px 15px 0px;")
                      h3 To
                      h2= dest.airport
                      img(src='/img/'+dest.image,height="300")

            div.bluBox.shadow
              div
                  h3.blutytles.shadow Currency Converter
              div.blucont.shadow
                  script(src="/javascripts/auto.js")
                  form(id="Currency")
                    input(type="number" name="To" id="localCurrency").inputstyled
                    button( type="button" onclick="return convert();" style = "height:3vw;").destButton Convert
                    input(type="number" name="From" id="destCurrency").inputstyled
                  script(src="/javascripts/auto.js")

            div.bluBox.shadow
              h3.blutyles.shadow Final Details
              div(style = "padding-top:2vw;").row.blucont
                  div.col-md-6
                      h2 Depart
                      h3=startDate
                  div.col-md-6
                      h2 Return
                      h3=endDate
                form(action=dest.id+"/confirm",method="POST")
                    input(type="hidden",readonly,name="startDate",value=startDate)
                    input(type="hidden",readonly,name="endDate",value=endDate)
                    button(type="confirm").destButton Book yo flight
