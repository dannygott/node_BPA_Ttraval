mixin thumbnail(id, imageName, name , caption)
  div( style="margin-top: 2%; width: 400px;  margin-left: 2%; margin-right 2%; display: inline-block; border-radius: 5px; background-color:white; box-shadow: 2px 2px 1px #C8C8C8 ;")
    img(src="img/#{imageName}" width="75%" style="  align-self: center; margin-left:30px; margin-right:30px; margin-top:30px;")
    h3
    form(action="destinations/"+id)
        button.destButton(type="submit")= name
    -if (caption)
      p= caption



extends layout
block content
  center
    h1(style="font-size: 70px") Choose Your View
    div.views
      for dest in dests
        +thumbnail(dest.id, dest.image , dest.title , dest.description)
