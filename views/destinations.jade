mixin thumbnail(imageName, caption , secondcaption)
  div( style = " margin-top : 5%; width : 30%; display: inline-block;" href= "/#{caption}")
    img(src="img/#{imageName}" height="300px" style="position: relative;")
    h3= caption
    -if (secondcaption)
      p= secondcaption



extends layout
block content
  center
    h1 Choose Your View
    div.views
      for name in dests
        +thumbnail( name.image , name.title , name.description)
