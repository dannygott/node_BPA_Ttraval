extends layout
block content
    div.container.well(style='background: url("/img/' + dest.image + '");' + 'background-size: cover;')
        h1= dest.title
        if user
            form(action='/checkout/'+dest.id,method="POST")
                input(type='text',name='daterange',style="margin-right:10px;")
                button(type='submit').btn.btn-primary Check Out
        else
            a(href='/checkout/'+dest.id,data-toggle="tooltip",
            title="You must have an account to check out")
                .btn.btn-primary.disabled Check Out

