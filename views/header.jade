script(type="text/javascript" src="javascripts/loginfadr.js")
nav.navbar.navbar-default
    div.container-fluid
        div.navbar-header
            a(href='/').navbar-brand Travel Memes
        div.collapse.navbar-collapse
            if navItems
                ul.nav.navbar-nav
                    each item in navItems
                        - var isActive = (item.section == section ? 'active' : '')
                        li(class=isActive)
                            a(href='#{item.link}') #{item.title}

                ul.nav.navbar-nav.navbar-right
                    li
                        if user
                            li.dropdown
                                a(href='#',data-toggle="dropdown",aria-haspopup="true",aria-expanded="false") #{user.id}
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/settings') Settings
                                        a(href='/auth/logout') Logout
                        else
                            li
                                button(onclick="fadetologin(true)").destButton Login

div(onclick = "fadetologin(false)").fullscreen.login.text-center
    div(style="display:inline-block; position: relative;  top: 50%; transform: translateY(-50%);").panel.panel-primary
        if user
            div(class="panel-heading")
                h3(class="panel-title") Welcome #{user.id}

        else
            div(class="panel-heading")
                h3(class="panel-title") Login/Register
            div(class="panel-body")
                form(class="form-horizontal",action="/auth/login",method="post").loginform
                    div(class="form-group")
                        label(class="col-md-4 control-label") Username
                        div(class="col-md-8")
                            input(type='text',name='username')
                    div(class="form-group")
                        label(class="col-md-4 control-label") Password
                        div(class="col-sm-8")
                            input(type='password',name='password')
                    div(class="form-group")
                        div(class="col-md-offset-4 col-md-8")
                            input(class="btn btn-default",type='submit',value='Log in')
                button.destButton Register 
                form(class="form-horizontal",action="/auth/register",method="post").register
                    div(class="form-group")
                        label(class="col-md-4 control-label") Username
                        div(class="col-md-8")
                            input(type='text',name='username')
                    div(class="form-group")
                        label(class="col-md-4 control-label") Password
                        div(class="col-sm-8")
                            input(type='password',name='password')
                    div(class="form-group")
                        label(class="col-md-4 control-label") Airport Code
                        div(class="col-sm-8")
                            input(type='text',name='airport')
                    div(class="form-group")
                        div(class="col-md-offset-4 col-md-8")
                            input(class="btn btn-default",type='submit',value='Register')
