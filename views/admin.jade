extends layout

block content
    div(class="row")
        div(class="col-md-8 col-md-offset-2")
            h1 Destinations
            table(class="table table-striped")
                thead
                    tr
                        th 
                        th Section (id)
                        th Airport Code
                        th Destination
                        th Description
                        th Image (path)
                tbody
                    each dest in dests
                        tr
                            td
                                a(type='button',class='btn btn-default',href='/admin/delDest/#{dest.id}')
                                    span(class='glyphicon glyphicon-remove')
                                button(type='button',class='btn btn-default')
                                    span(class='glyphicon glyphicon-pencil')
                            td= dest.id
                            td= dest.airport
                            td= dest.title
                            td= dest.description
                            td= dest.image
                    tr
                        form(action='/admin/addDest',method='post',enctype='multipart/form-data')
                            td
                            td
                                input(type='text',name='id',class='form-control')
                            td
                                input(type='text',name='dest',class='form-control')
                            td
                                input(type='text',name='desc',class='form-control')
                            td
                                input(type='file',name='image')

                                button(class="btn btn-primary pull-right",type="submit") Submit
